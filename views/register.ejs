<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register - MedCare</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-50">
    <div class="min-h-screen flex">
        <!-- Left Side - Image -->
        <div class="hidden lg:block lg:w-1/2">
            <img src="https://images.unsplash.com/photo-1579684385127-1ef15d508118?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80"
                 class="w-full h-screen object-cover" alt="Medical Background">
        </div>

        <!-- Right Side - Registration Forms -->
        <div class="w-full lg:w-1/2 flex items-center justify-center p-8">
            <div class="max-w-md w-full">
                <div class="text-center mb-8">
                    <h2 class="text-3xl font-bold text-gray-800">Create an Account</h2>
                    <p class="text-gray-600 mt-2">Join our healthcare community</p>
                </div>

                <!-- Role Selection Tabs -->
                <div class="mb-8">
                    <div class="flex border-b border-gray-200">
                        <button onclick="showForm('patient')" 
                                class="flex-1 py-2 px-4 text-center border-b-2 border-blue-500 text-blue-600 font-medium">
                            Patient Registration
                        </button>
                        <button onclick="showForm('doctor')"
                                class="flex-1 py-2 px-4 text-center text-gray-500 hover:text-gray-700 font-medium">
                            Doctor Registration
                        </button>
                    </div>
                </div>

                <!-- Patient Registration Form -->
                <form id="patientForm" action="/auth/register/patient" method="POST" class="space-y-6">
                    <div>
                        <label class="block text-gray-700 text-sm font-semibold mb-2">Full Name</label>
                        <input type="text" name="name" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>

                    <div>
                        <label class="block text-gray-700 text-sm font-semibold mb-2">Email Address</label>
                        <input type="email" name="email" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>

                    <div>
                        <label class="block text-gray-700 text-sm font-semibold mb-2">Password</label>
                        <input type="password" name="password" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>

                    <div>
                        <label class="block text-gray-700 text-sm font-semibold mb-2">Confirm Password</label>
                        <input type="password" name="confirmPassword" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>

                    <button type="submit"
                            class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                        Register as Patient
                    </button>
                </form>

                <!-- Doctor Registration Form -->
                <form id="doctorForm" action="/auth/register/doctor" method="POST" class="hidden space-y-6">
                    <div>
                        <label class="block text-gray-700 text-sm font-semibold mb-2">Full Name</label>
                        <input type="text" name="name" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>

                    <div>
                        <label class="block text-gray-700 text-sm font-semibold mb-2">Email Address</label>
                        <input type="email" name="email" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>

                    <div>
                        <label class="block text-gray-700 text-sm font-semibold mb-2">Specialization</label>
                        <select name="specialization" required
                                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="">Select Specialization</option>
                            <option value="cardiology">Cardiology</option>
                            <option value="dermatology">Dermatology</option>
                            <option value="neurology">Neurology</option>
                            <option value="orthopedics">Orthopedics</option>
                            <option value="pediatrics">Pediatrics</option>
                            <option value="psychiatry">Psychiatry</option>
                        </select>
                    </div>

                    <div>
                        <label class="block text-gray-700 text-sm font-semibold mb-2">Department</label>
                        <select name="department" required
                                class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                            <option value="">Select Department</option>
                            <option value="emergency">Emergency</option>
                            <option value="outpatient">Outpatient</option>
                            <option value="inpatient">Inpatient</option>
                            <option value="surgery">Surgery</option>
                        </select>
                    </div>

                    <div>
                        <label class="block text-gray-700 text-sm font-semibold mb-2">Password</label>
                        <input type="password" name="password" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>

                    <div>
                        <label class="block text-gray-700 text-sm font-semibold mb-2">Confirm Password</label>
                        <input type="password" name="confirmPassword" required
                               class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
                    </div>

                    <button type="submit"
                            class="w-full bg-blue-600 text-white py-2 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2">
                        Register as Doctor
                    </button>
                </form>

                <!-- Login Link -->
                <div class="text-center mt-6">
                    <p class="text-gray-600">
                        Already have an account?
                        <a href="/login" class="text-blue-600 hover:underline">Sign in here</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script>
        function showForm(type) {
            const patientForm = document.getElementById('patientForm');
            const doctorForm = document.getElementById('doctorForm');
            const buttons = document.querySelectorAll('button');

            if (type === 'patient') {
                patientForm.classList.remove('hidden');
                doctorForm.classList.add('hidden');
                buttons[0].classList.add('border-blue-500', 'text-blue-600');
                buttons[0].classList.remove('text-gray-500');
                buttons[1].classList.remove('border-blue-500', 'text-blue-600');
                buttons[1].classList.add('text-gray-500');
            } else {
                patientForm.classList.add('hidden');
                doctorForm.classList.remove('hidden');
                buttons[1].classList.add('border-blue-500', 'text-blue-600');
                buttons[1].classList.remove('text-gray-500');
                buttons[0].classList.remove('border-blue-500', 'text-blue-600');
                buttons[0].classList.add('text-gray-500');
            }
        }
    </script>
</body>
</html> 